<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Sgs2.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>sgs2.rpc.sgs2</servlet-name>
    <servlet-class>org.sakaiproject.sgs2.server.mock.GroovyShellServiceMockImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>sgs2.rpc.sgs2</servlet-name>
    <url-pattern>/sgs2/rpc/sgs2</url-pattern>
  </servlet-mapping>

</web-app>
